{% extends 'base-admin.html.twig' %}


{% block title %}Livre{% endblock %}

{% block body %}
    <a href="{{ path('admin_livre_index') }}" class="btn btn-dark my-2">back to list</a>
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ livre.description|raw }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ livre.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ livre.imageSize }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ livre.updatedAt ? livre.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>


<a href="{{ path('admin_livre_edit', {'id': livre.id}) }}" class="btn btn-success my-2">
    edit
</a>



{% block title %}
    Auteur
{% endblock %}

{% block body %}
    <a href="{{ path('admin_auteur_index') }}" class="btn btn-dark my-2">
        back to list
    </a>
    <h1>
        Auteur
    </h1>

    <table class="table">
        <tbody>
            <tr>
                <th>
                    Id
                </th>
                <td>
                    {{ auteur.id }}
                </td>
            </tr>
            <tr>
                <th>
                    Pseudo
                </th>
                <td>
                    {{ auteur.pseudo }}
                </td>
            </tr>
            <tr>
                <th>
                    Nom
